@{
    ViewData["Title"] = "Crear Encuesta";
}
<div class="container mt-5">
    <form asp-action="CrearEncuesta" method="post">
        <div class="form-group">
            <label for="Nombre" class="font-weight-bold">
                <i class="fas fa-poll"></i> Nombre de la encuesta
            </label>
            <input type="text" class="form-control" id="Nombre" name="Nombre" placeholder="Introduce el nombre de la encuesta" required>
        </div>
        <div class="form-group">
            <label for="Descripcion" class="font-weight-bold">
                <i class="fas fa-align-left"></i> Descripción
            </label>
            <textarea class="form-control" id="Descripcion" name="Descripcion" rows="3" placeholder="Introduce una descripción"></textarea>
        </div>
        <button type="submit" class="btn btn-primary btn-block">
            <i class="fas fa-paper-plane"></i> Crear Encuesta
        </button>
    </form>
</div>